# "Global" (until I figure them out on Windows)

desc 'Reset IIS'
task :reset_iis do
	system 'c:/Windows/system32/iisreset.exe'
end

desc 'Stop IIS'
task :stop_iis do
	system 'c:/Windows/system32/iisreset.exe /STOP'
end

desc 'Start IIS'
task :start_iis do
	system 'c:/Windows/system32/iisreset.exe /START'
end

